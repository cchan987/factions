@{
    var ParticipatingIn = Newtonsoft.Json.JsonConvert.DeserializeObject(ViewBag.ParticipatingIn);
}
<h1>You are logged in as @User.Identity.Name</h1>
<body ng-app="ProjectLobby">
    <div ng-controller="ProjectList">
        <div id="ParticipatingIn">
            <p><a asp-action="JoinProject" asp-route-ProjId="{{ParticipatingIn.Id}}">You are participating in: {{ParticipatingIn.Name}}</a></p>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-xs-6">
                    <h2>Projects in Progress</h2>
                    @foreach (var project in ViewBag.inProgress)
                    {
                        <p>@project.Name</p>

                        <p>______</p>
                    }
                </div>

                <div class="col-xs-6">
                    <h2>Projects Accepting Participants</h2>
                    @foreach (var project in ViewBag.AcceptingParticipants)
                    {
                        <p><a asp-action="JoinProject" asp-route-ProjId="@project.Id">@project.Name</a></p>
                    }
                </div>

                <div class="col-xs-6" ng-controller="ProjectList">
                    <h2>Projects Accepting Participants</h2>
                    <ul ng-repeat="project in ViewBag.AcceptingParticipants">
                        <li><p><a asp-action="JoinProject" asp-route-ProjId={{project.Id}}>{{project.Name}}</a></p></li>
                    </ul>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-6">
                    <a class="btn btn-primary" asp-action="CreateProject">Create Project</a>
                </div>
            </div>

        </div>
    </div>

    <div ng-controller="ChatArea">
        <h1>Chat Area</h1>
        <input type=text id="textInput" ng-model="textValue" placeholder="Enter your text" />
        <button id="sendButton" ng-click="sendButton()">Send</button>
        <ul id="messages">
            <li ng-repeat="msg in messages">
                {{msg.name}}
            </li>
        </ul>
    </div>

</body >

<script src="~/js/WebSocket.js" language="javascript" type="text/javascript"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.6.1/angular.js"></script>
<script src="~/js/ProjectLobby.js" language="javascript" type="text/javascript"></script>
<script src="~/js/ProjectListController.js" language="javascript" type="text/javascript"></script>




